    "express": "~4.13.3",
    "jsonwebtoken": "~5.7.0",
    "method-override": "~2.3.5",
    "moment": "~2.14.1",
    "mongodb": "~2.1.18",
    "mongoose": "^4.4.10",
    "mongoose-id-validator": "^0.4.0",
    "mongoose-unique-validator": "^1.0.3",
    "morgan": "~1.6.1",
    "nodemon": "~1.9.1",
    "request": "^2.79.0",
    "request-promise": "^4.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-http": "^2.0.1",
